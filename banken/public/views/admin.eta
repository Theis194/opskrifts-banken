<!DOCTYPE html>
<html lang="en" data-theme="cupcake">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family Recipes Admin</title>
    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- DaisyUI -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.9.4/dist/full.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.6"></script>
    <!-- Alpine.js for reactivity -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>

<body class="bg-gray-50">
    <%~ include("./partials/nav", it)%>

        <div class="drawer lg:drawer-open">
            <input id="my-drawer" type="checkbox" class="drawer-toggle" />

            <!-- Page content -->
            <div class="drawer-content flex flex-col">
                <!-- Mobile navbar -->
                <div class="navbar bg-base-100 lg:hidden shadow-sm">
                    <div class="flex-none">
                        <label for="my-drawer" class="btn btn-square btn-ghost">
                            <i class="fas fa-bars text-xl"></i>
                        </label>
                    </div>
                    <div class="flex-1">
                        <a class="btn btn-ghost normal-case text-xl">Family Recipes</a>
                    </div>
                </div>

                <!-- Main content -->
                <main class="flex-1 p-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <div id="content-area" hx-get="/admin/recipes" hx-trigger="load">
                            <!-- Content will be loaded here via HTMX -->
                            <div class="flex justify-center items-center h-64">
                                <span class="loading loading-spinner loading-lg"></span>
                            </div>
                        </div>
                    </div>
                </main>
            </div>

            <!-- Sidebar -->
            <div class="drawer-side">
                <label for="my-drawer" class="drawer-overlay"></label>
                <div class="menu p-4 w-80 h-full bg-base-200 text-base-content">

                    <!-- Navigation links -->
                    <ul>
                        <!-- Recipe Management Section -->
                        <li class="menu-title">
                            <span>Recipes</span>
                        </li>
                        <li>
                            <a hx-get="/admin/recipes" hx-target="#content-area">
                                <i class="fas fa-book-open mr-2"></i>
                                View Recipes
                            </a>
                        </li>
                        <li>
                            <a hx-get="/admin/recipes/new" hx-target="#content-area">
                                <i class="fas fa-plus-circle mr-2"></i>
                                Add Recipe
                            </a>
                        </li>
                        <li>
                            <a hx-get="/admin/recipes/edit" hx-target="#content-area">
                                <i class="fas fa-pencil-alt mr-2"></i>
                                Edit Recipe
                            </a>
                        </li>

                        <!-- Family Members Section -->
                        <li class="menu-title mt-4">
                            <span>Family</span>
                        </li>
                        <li>
                            <a hx-get="/admin/family" hx-target="#content-area">
                                <i class="fas fa-users mr-2"></i>
                                Family Members
                            </a>
                        </li>
                        <li>
                            <a hx-get="/admin/family/invite" hx-target="#content-area">
                                <i class="fas fa-envelope mr-2"></i>
                                Invite Family
                            </a>
                        </li>
                    </ul>

                    <!-- Bottom section -->
                    <div class="mt-auto p-4">
                        <div class="divider"></div>
                        <div class="flex items-center">
                            <div class="avatar mr-3">
                                <div class="w-10 rounded-full">
                                    <img src="https://placehold.co/100" alt="User Avatar" />
                                </div>
                            </div>
                            <div>
                                <p class="font-medium">Family Admin</p>
                            </div>
                        </div>
                        <a href="/logout" class="btn btn-sm btn-ghost mt-4 w-full">
                            <i class="fas fa-sign-out-alt mr-2"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- HTMX indicators -->
        <style>
            .htmx-indicator {
                opacity: 0;
                transition: opacity 200ms ease-in;
            }

            .htmx-request .htmx-indicator {
                opacity: 1;
            }

            .htmx-request.htmx-indicator {
                opacity: 1;
            }
        </style>
        <script src="../js/addRecipePartial.js"></script>
</body>

</html>
