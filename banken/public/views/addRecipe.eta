<!DOCTYPE html>
<html lang="en" data-theme="cupcake">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Recipe | My Recipe Box</title>
  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- DaisyUI -->
  <link href="https://cdn.jsdelivr.net/npm/daisyui@3.9.4/dist/full.css" rel="stylesheet" type="text/css" />
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Alpine.js for reactivity -->
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  <script src="../js/redirect.js"></script>
</head>

<body>
  <%~ include("./partials/nav", it)%>

  <%~ include("./partials/add_recipe", it)%>

  <%~ include("./partials/footer")%>

  <script>
    window.KNOWN_INGREDIENTS = <%~ JSON.stringify(it.ingredients) %>;
    window.KNOWN_TAGS = <%~ JSON.stringify(Object.fromEntries(it.tags)) %>;
    window.KNOWN_CATEGORIES = <%~ JSON.stringify(Object.fromEntries(it.categories)) %>;
  </script>

  <script src="../js/addRecipe.js"></script>
</body>

</html>